<style>
  .slim-scroll::-webkit-scrollbar { width: 8px; }
  .slim-scroll::-webkit-scrollbar-thumb { background: rgba(0, 0, 0, 0.15); border-radius: 9999px; }
  .dark .slim-scroll::-webkit-scrollbar-thumb { background: rgba(255, 255, 255, 0.2); }

  .lb-backdrop { position: fixed; inset: 0; background: rgba(0, 0, 0, 0.8); display: none; align-items: center; justify-content: center; z-index: 60; }
  .lb-backdrop.open { display: flex; }
  .lb-img { max-width: 92vw; max-height: 92vh; border-radius: 0.5rem; box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5); }
  .lb-backdrop.open .lb-img { animation: lb-zoom 160ms ease-out; }
  @keyframes lb-zoom { from { transform: scale(0.96); opacity: 0.8; } to { transform: scale(1); opacity: 1; } }
  .lb-btn { position: absolute; top: 1rem; background: rgba(0,0,0,0.6); color: white; border: none; padding: .5rem .75rem; border-radius: .5rem; cursor: pointer; backdrop-filter: blur(4px); }
  .lb-close { right: 1rem; font-size: 1.25rem; line-height: 1; }
  .lb-arrow { top: 50%; transform: translateY(-50%); padding: .6rem .8rem; font-size: 1.1rem; }
  .lb-prev { left: 1rem; }
  .lb-next { right: 1rem; }
</style>

<div id="lightbox" class="lb-backdrop" aria-hidden="true">
  <button class="lb-btn lb-close" aria-label="Close (Esc)">✕</button>
  <button class="lb-btn lb-arrow lb-prev" aria-label="Previous (←)">◀</button>
  <img class="lb-img" src="" alt="Preview" />
  <button class="lb-btn lb-arrow lb-next" aria-label="Next (→)">▶</button>
</div>

<script>
  const lb = document.getElementById('lightbox');
  const lbImg = lb?.querySelector('.lb-img');
  const btnClose = lb?.querySelector('.lb-close');
  const btnPrev = lb?.querySelector('.lb-prev');
  const btnNext = lb?.querySelector('.lb-next');

  const thumbs = Array.from(document.querySelectorAll('.js-lightbox'));
  let currentIndex = -1;

  function openAt(idx) {
    if (!thumbs.length || !lb || !lbImg) return;
    currentIndex = ((idx % thumbs.length) + thumbs.length) % thumbs.length;
    const src = thumbs[currentIndex].getAttribute('data-full') || thumbs[currentIndex].getAttribute('src');
    if (!src) return;

    const pre = new Image();
    pre.onload = () => {
      lbImg.src = src;
      lb.classList.add('open');
      lb.setAttribute('aria-hidden', 'false');
      document.documentElement.style.overflow = 'hidden';
    };
    pre.src = src;
  }

  function closeLB() {
    if (!lb || !lbImg) return;
    lb.classList.remove('open');
    lb.setAttribute('aria-hidden', 'true');
    lbImg.src = '';
    document.documentElement.style.overflow = '';
    currentIndex = -1;
  }

  function next() { if (currentIndex > -1) openAt(currentIndex + 1); }
  function prev() { if (currentIndex > -1) openAt(currentIndex - 1); }

  document.addEventListener('click', (e) => {
    const t = e.target;
    if (t && t.classList && t.classList.contains('js-lightbox')) {
      const clickedIndex = thumbs.indexOf(t);
      openAt(clickedIndex > -1 ? clickedIndex : 0);
    } else if (t === lb) {
      closeLB();
    }
  });

  lbImg?.addEventListener('click', closeLB);
  btnClose?.addEventListener('click', closeLB);
  btnNext?.addEventListener('click', next);
  btnPrev?.addEventListener('click', prev);

  document.addEventListener('keydown', (e) => {
    if (!lb?.classList.contains('open')) return;
    if (e.key === 'Escape') { e.preventDefault(); closeLB(); }
    else if (e.key === 'ArrowRight') { e.preventDefault(); next(); }
    else if (e.key === 'ArrowLeft') { e.preventDefault(); prev(); }
  });
</script>
