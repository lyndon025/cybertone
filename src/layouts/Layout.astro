---
// src/layouts/Layout.astro
import ThemeToggle from '../components/ThemeToggle.astro';

interface Props {
  title: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  description = "Cybertone Industrial Sales — Manufacturer & supplier of custom molded rubber products and metal fabrication.",
  image = "/preview.png",
  canonicalURL = Astro.url,
} = Astro.props;

const siteTitle = "Cybertone Industrial Sales";
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <!-- CHANGED: discourage zoom and double-tap zoom on mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />

    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Cybertone Industrial Sales" />
    <meta name="keywords" content="molded rubber,O-rings,gaskets,bumpers,bushings,washers,strips,sheets,seals,custom rubber,metal fabrication,San Juan,Philippines" />
    <meta name="robots" content="index, follow" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#0047AB" />

    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
      window.localStorage.setItem('theme', theme);
    </script>
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 dark:text-gray-100 transition-colors duration-200 font-lato flex flex-col">
    <slot name="header" />
    <div class="flex-grow">
      <div class="container mx-auto px-4">
        <slot />
      </div>
    </div>
    <slot name="footer" />
   
  </body>
</html>

<style is:global>
  html { scroll-behavior: smooth; }
  html.dark { color-scheme: dark; }

  :root {
    --accent: 0, 71, 171;
    --accent-light: 0, 163, 255;
    --accent-dark: 30, 58, 138;
    --accent-gradient: linear-gradient(
      135deg, rgb(var(--accent)) 0%, rgb(var(--accent-light)) 50%, #2563eb 100%
    );
  }

  .container { width: 100%; margin-inline: auto; padding-inline: 1rem; }
  @media (min-width: 640px) { .container { padding-inline: 1.5rem; } }
  @media (min-width: 768px) { .container { padding-inline: 2rem; } }
  @media (min-width: 1024px) { .container { max-width: 1024px; } }
  @media (min-width: 1280px) { .container { max-width: 1280px; } }
  @media (min-width: 1536px) { .container { max-width: 1440px; } }
  @media (min-width: 1800px) { .container { max-width: 1600px; } }

  .slim-scroll::-webkit-scrollbar { width: 8px; }
  .slim-scroll::-webkit-scrollbar-thumb { background: rgba(0,0,0,0.15); border-radius: 9999px; }
  .dark .slim-scroll::-webkit-scrollbar-thumb { background: rgba(255,255,255,0.15); }

  /* NEW: reduce double-tap delay on interactive elements (helps avoid double-tap zoom) */
  a, button { touch-action: manipulation; }

  /* Optional: ensure text inputs don’t trigger zoom by keeping font-size ≥ 16px on iOS */
  input, select, textarea { font-size: 16px; }
</style>
